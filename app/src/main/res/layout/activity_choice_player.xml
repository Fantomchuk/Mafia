<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choice_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.ChoicePlayer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/textView_ChoicePlayer"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"/>

    <ListView
        android:layout_below="@+id/textView_ChoicePlayer"
        android:id="@+id/listView_ChoicePlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/bt_ChoicePlayer_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NewPlayer_title_4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onTextClickChoicePlayer"
        android:layout_toEndOf="@+id/bt_ChoicePlayer_none"
        />

    <ImageView
        android:id="@+id/img_ChoicePlayer_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        android:onClick="onTextClickChoicePlayer"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/bt_ChoicePlayer_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ChoiceKilled_title_6"
        android:onClick="onTextClickChoicePlayer"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
