<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_players_in_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.PlayersInGame">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:id="@+id/tv_PlayersInGame_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="5dp"
        android:text="@string/PlayersInGame_title_0"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <ListView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_PlayersInGame_title"
        android:id="@+id/listView_PlayersInGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/bt_PlayersInGame_newPlayer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/PlayersInGame_title_2"
        android:layout_alignParentBottom="true"
        android:onClick="onTextClickPlayersInGame"
        />

    <Button
        android:id="@+id/bt_PlayersInGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/PlayersInGame_title_1"
        android:layout_alignParentBottom="true"
        android:onClick="onTextClickPlayersInGame"
        android:layout_toEndOf="@+id/bt_PlayersInGame_newPlayer"
        />

    <ImageView
        android:id="@+id/img_PlayersInGame_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        android:onClick="onTextClickPlayersInGame"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</RelativeLayout>
