<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_players_in_game_role"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.PlayersInGameRole">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/PlayersInGameRole_title_0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_don_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_PlayersInGameRole_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/PlayersInGameRole_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_don_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_don_1"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_don_1"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_marginLeft="15dp"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_don_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PlayersInGameRole_title_2"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onTextClickPlayersInGameRole"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_don_2"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_don_2"
        android:layout_alignStart="@+id/tv_PlayersInGameRole_sherif_3" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_sherif_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tv_PlayersInGameRole_don_3"
        android:layout_marginTop="20dp"
        android:text="@string/PlayersInGameRole_title_3"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_sherif_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_sherif_1"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_sherif_1"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_marginLeft="15dp"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_sherif_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_sherif_2"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_sherif_2"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_sherif_2"
        android:layout_marginLeft="5dp"
        android:text="@string/PlayersInGameRole_title_2"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onTextClickPlayersInGameRole" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_1maf_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_PlayersInGameRole_sherif_3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/PlayersInGameRole_title_4"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_1maf_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_1maf_1"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_1maf_1"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_marginLeft="15dp"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_1maf_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_1maf_2"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_1maf_2"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_1maf_2"
        android:layout_marginLeft="5dp"
        android:text="@string/PlayersInGameRole_title_2"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onTextClickPlayersInGameRole" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_PlayersInGameRole_1maf_3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/PlayersInGameRole_title_5"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_2maf_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_2maf_1"
        android:layout_marginLeft="15dp"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_2maf_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_PlayersInGameRole_2maf_2"
        android:layout_alignBottom="@+id/tv_PlayersInGameRole_2maf_2"
        android:layout_toEndOf="@+id/tv_PlayersInGameRole_2maf_2"
        android:layout_marginLeft="5dp"
        android:text="@string/PlayersInGameRole_title_2"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onTextClickPlayersInGameRole" />

    <Button
        android:id="@+id/bt_PlayersInGameRole_cancel_roles"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_PlayersInGameRole_2maf_3"
        android:text="@string/PlayersInGameRole_title_6"
        android:onClick="onTextClickPlayersInGameRole"
        />

    <Button
        android:id="@+id/bt_PlayersInGameRole_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/bt_PlayersInGameRole_cancel_roles"
        android:text="@string/PlayersInGameRole_title_7"
        android:onClick="onTextClickPlayersInGameRole"
        />

    <TextView
        android:id="@+id/tv_PlayersInGameRole_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/bt_PlayersInGameRole_next"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_PlayersInGameRole_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onTextClickPlayersInGameRole"
        android:contentDescription="@string/title_1"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</RelativeLayout>
