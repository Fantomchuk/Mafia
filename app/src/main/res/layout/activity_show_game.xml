<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.ShowGame">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:id="@+id/tv_ShowGame_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:text="@string/ShowGame_title_0"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_ShowGame_date_strart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ShowGame_1"
        android:layout_centerHorizontal="true"
        android:text="@string/ShowGame_title_1"
        android:onClick="onTextClickShowGame"
        android:clickable="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_ShowGame_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ShowGame_date_strart"
        android:layout_centerHorizontal="true"
        android:text="@string/ShowGame_title_2"
        android:onClick="onTextClickShowGame"
        android:clickable="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_ShowGame_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShowGame_title_3"
        android:onClick="onTextClickShowGame"
        android:layout_below="@+id/tv_ShowGame_date_end"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_ShowGame_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_ShowGame_search"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lv_ShowGame"
        android:layout_below="@+id/bt_ShowGame_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/img_ShowGame_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:onClick="onTextClickShowGame"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</RelativeLayout>
