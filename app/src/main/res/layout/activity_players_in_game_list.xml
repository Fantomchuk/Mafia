<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_players_in_game_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nazar.mafia.PlayersInGameList"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <LinearLayout
        android:id="@+id/ll_PlayersInGameList_numberGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_PlayersInGameList_numberGame_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_result_title_2"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_numberGame_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PlayerPage_title_1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_numberGame_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_PlayersInGameList_leader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_PlayersInGameList_numberGame"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_PlayersInGameList_leader_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NewGame_title_3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_leader_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PlayerPage_title_1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_leader_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_PlayersInGameList_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_PlayersInGameList_leader"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_PlayersInGameList_date_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NewGame_title_1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_date_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PlayerPage_title_1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PlayersInGameList_date_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_PlayersInGameList"
        android:layout_below="@+id/ll_PlayersInGameList_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/img_PlayersInGameList_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        android:onClick="onTextClickPlayersInGameList"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/bt_PlayersInGameList_endGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PlayersInGameList_title_6"
        android:onClick="onTextClickPlayersInGameList"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
