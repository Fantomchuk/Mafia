<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tV_pas_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/dialog_pass_title_1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/eT_pas_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/dialog_pass_title_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tV_pas_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_pass_title_3"
            android:textColor="@android:color/black"
            android:layout_weight="5"/>

        <EditText
            android:id="@+id/eT_pas_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dialog_pass_title_3"
            android:inputType="textPassword"
            android:layout_weight="3"/>
    </LinearLayout>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:text="@string/dialog_pass_title_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:id="@+id/bT_pas_1" />


</LinearLayout>