<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.NewGame">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:id="@+id/tv_NewGame_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:text="@string/NewGame_title_0"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_NewGame_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_NewGame_title"
        android:layout_marginTop="10dp"
        android:text="@string/NewGame_title_3"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_NewGame_leader_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_NewGame_leader"
        android:layout_alignBottom="@+id/tv_NewGame_leader"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_NewGame_leader"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/aCtV_NewGame_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_NewGame_leader_1"
        android:layout_alignBottom="@+id/tv_NewGame_leader_1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/tv_NewGame_leader_1"
        android:ems="25"
        android:hint="@string/NewGame_title_3"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_NewGame_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aCtV_NewGame_leader"
        android:layout_marginTop="10dp"
        android:text="@string/NewGame_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_NewGame_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_NewGame_date"
        android:layout_alignBottom="@+id/tv_NewGame_date"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_NewGame_leader"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_NewGame_date"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_NewGame_date_1"
        android:layout_alignBottom="@+id/tv_NewGame_date_1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/tv_NewGame_date_1"
        android:text="@string/NewPlayer_title_4"
        android:onClick="onTextClickNewGame"
        />

    <TextView
        android:id="@+id/tv_NewGame_numberGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_NewGame_date"
        android:layout_marginTop="10dp"
        android:text="@string/NewGame_title_2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_NewGame_numberGame_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_NewGame_numberGame"
        android:layout_alignBottom="@+id/tv_NewGame_numberGame"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_NewGame_leader"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/eT_NewGame_numberGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_NewGame_numberGame_1"
        android:layout_alignBottom="@+id/tv_NewGame_numberGame_1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/tv_NewGame_numberGame_1"
        android:ems="10"
        android:hint="@string/NewGame_title_2"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_NewGame_addPlayers"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/eT_NewGame_numberGame"
        android:text="@string/NewGame_title_4"
        android:onClick="onTextClickNewGame"
        />
    <TextView
        android:id="@+id/tv_NewGame_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/bt_NewGame_addPlayers"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_NewGame_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        android:onClick="onTextClickNewGame"
        app:srcCompat="@android:drawable/ic_menu_revert" />



</RelativeLayout>
