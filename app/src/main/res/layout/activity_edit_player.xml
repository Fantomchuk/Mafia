<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nazar.mafia.EditPlayer">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/title_0"
        app:srcCompat="@drawable/emblem" />

    <TextView
        android:id="@+id/tv_EditPlayer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:text="@string/EditPlayer_title_1"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EditPlayer_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/NewPlayer_title_2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_nickName_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_nickName"
        android:layout_alignBottom="@+id/tv_EditPlayer_nickName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/eT_EditPlayer_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_nickName_1"
        android:layout_alignBottom="@+id/tv_EditPlayer_nickName_1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_nickName_1"
        android:ems="10"
        android:hint="@string/NewPlayer_title_2"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_EditPlayer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EditPlayer_nickName_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/PlayerPage_title_0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_name"
        android:layout_alignBottom="@+id/tv_EditPlayer_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/eT_EditPlayer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_name_1"
        android:layout_alignBottom="@+id/tv_EditPlayer_name_1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_name_1"
        android:ems="10"
        android:hint="@string/PlayerPage_title_0"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_EditPlayer_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EditPlayer_name_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/PlayerPage_title_2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_surname_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_surname"
        android:layout_alignBottom="@+id/tv_EditPlayer_surname"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/eT_EditPlayer_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_surname_1"
        android:layout_alignBottom="@+id/tv_EditPlayer_surname_1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_surname_1"
        android:ems="10"
        android:hint="@string/PlayerPage_title_2"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_EditPlayer_startPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EditPlayer_surname_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/PlayerPage_title_3"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_startPlay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_startPlay"
        android:layout_alignBottom="@+id/tv_EditPlayer_startPlay"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_EditPlayer_date"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_EditPlayer_startPlay_1"
        android:layout_alignBottom="@+id/tv_EditPlayer_startPlay_1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay_1"
        android:text="@string/NewPlayer_title_12"
        android:onClick="onTextClickEditPlayer"
        />

    <TextView
        android:id="@+id/tv_EditPlayer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_EditPlayer_startPlay_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/NewPlayer_title_3"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_EditPlayer_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_EditPlayer_title"
        android:layout_alignBottom="@+id/tv_EditPlayer_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_startPlay"
        android:text="@string/PlayerPage_title_1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiner_EditPlayer"
        android:layout_alignBaseline="@+id/tv_EditPlayer_title_1"
        android:layout_alignBottom="@+id/tv_EditPlayer_title_1"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_EditPlayer_title_1"
        >

    </Spinner>
    <Button
        android:id="@+id/bt_EditPlayer_edit_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/EditPlayer_title_2"
        android:layout_below="@+id/spiner_EditPlayer"
        android:onClick="onTextClickEditPlayer"
        />

    <TextView
        android:id="@+id/tv_EditPlayer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/bt_EditPlayer_edit_player"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_EditPlayer_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@string/title_1"
        android:onClick="onTextClickEditPlayer"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</RelativeLayout>
